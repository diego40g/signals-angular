generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          String @id
  slug        String @unique
  name        String
  price       Float
  category    String
  description String
  image       String
}

model User {
  id    String @id
  name  String
  email String @unique
  password String // Hash de la contrase√±a
  refreshToken String? // Opcional: para guardar el refresh token JWT
}
